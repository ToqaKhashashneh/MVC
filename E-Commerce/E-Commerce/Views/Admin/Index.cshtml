@model IEnumerable<E_Commerce.Models.Product>

@{
    ViewData["Title"] = "Index";
}
@{
    ViewData["Title"] = "Products Page";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2 class="text-center my-4" style="    margin-left: 21vw;">Products Page</h2>
<br />
@Html.ActionLink("Add New Product", "Create", "Admin", null, new { @class = "btn btn-primary add-product-btn" })

<div class="container content-container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@product.Image" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p><strong>Price:</strong> @product.Price J.D</p>
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                            <a class="btn btn-success" asp-action="Details" asp-route-id="@product.Id">Details</a>
                            <form method="post" action="@Url.Action("Delete", "Admin")" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
